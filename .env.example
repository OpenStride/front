# Public (client-exposed) variables — safe to commit as placeholders
# Note: Only variables prefixed with VITE_ are exposed to the client by Vite.

# MapTiler (public key intended for browser-side use)
VITE_MAPTILER_KEY=QGUlTKZoBcqkeabhXMTe

# Firebase (client config is not secret but should be project-specific)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# Google OAuth - Desktop app type (PKCE pur, pas de secret)
# Créer sur: https://console.cloud.google.com/apis/credentials
# Type: Desktop app (pas Web application)
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Google Drive API Key (for anonymous read access to public files)
# Used for fetching friend manifests shared via Google Drive
# Create at: https://console.cloud.google.com/apis/credentials
# Type: API Key (restrict to Google Drive API)
VITE_GOOGLE_DRIVE_API_KEY=

# Example API base URL for a secure backend/proxy (do not expose secrets here)
VITE_API_BASE_URL=http://localhost:8080

# OpenStride App Configuration
# Base URL for sharing links (used in QR codes and deep links)
# Production: Set to your deployed domain
# Development: Leave empty to use localhost:3000
# Format: Full URL with protocol, no trailing slash
# Examples:
#   Development: http://localhost:3000 (or leave empty)
#   Production: https://openstride.org
VITE_APP_BASE_URL=https://openstride.org
